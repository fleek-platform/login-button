{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "lib": ["es2020", "dom"],
    // only way to build @dynamic-labs/sdk-react-core
    // https://github.com/reown-com/appkit/issues/1211
    "skipLibCheck": true,
    "jsx": "preserve",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/examples/**/*"]
}
